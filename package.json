{
    "name": "betamax",
    "displayName": "Betamax BETA",
    "version": "1.0.0-beta",
    "description": "Record and generate animated demo screencasts.",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/fuyutarow/solid-chrome-extension-template.git"
    },
    "scripts": {
        "dev": "npm run build:sandbox && vite build -w",
        "dev:all": "vite build -w --config vite-frame.config.ts",
        "build": "vite build",
        "lint": "eslint . -c .eslintrc --ext js,ts,tsx --ignore-pattern='!.*'",
        "lint:fix": "eslint . --fix -c .eslintrc --ext js,ts,tsx --ignore-pattern='!.*'",
        "build:noemit": "tsc --noEmit && vite build",
        "test": "jest",
        "build:sandbox": "vite build --config vite-frame.config.ts",
        "build:all": "npm run build:sandbox && npm run build"
    },
    "type": "module",
    "dependencies": {
        "@webcomponents/custom-elements": "^1.6.0",
        "solid-element": "^1.7.1",
        "solid-js": "^1.6.2",
        "tldts": "^6.0.15"
    },
    "devDependencies": {
        "@crxjs/vite-plugin": "2.0.0-beta.7",
        "@types/chrome": "0.0.203",
        "@types/jest": "^29.2.3",
        "@types/node": "18.11.10",
        "@typescript-eslint/eslint-plugin": "5.45.0",
        "@typescript-eslint/parser": "5.45.0",
        "autoprefixer": "^10.4.13",
        "babel-preset-solid": "^1.6.2",
        "eslint": "8.29.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jsx-a11y": "6.6.1",
        "eslint-plugin-solid": "^0.9.1",
        "eslint-plugin-tailwindcss": "^3.13.0",
        "fs-extra": "11.1.0",
        "jest": "^29.3.1",
        "jest-environment-jsdom": "^29.3.1",
        "nodemon": "2.0.20",
        "postcss": "^8.4.19",
        "rollup-plugin-copy": "^3.4.0",
        "sass": "1.56.1",
        "tailwindcss": "^3.3.5",
        "ts-jest": "^29.0.3",
        "ts-loader": "9.4.2",
        "ts-node": "10.9.1",
        "typescript": "4.9.3",
        "vite": "3.2.4",
        "vite-plugin-solid": "^2.4.0",
        "vite-plugin-windicss": "^1.8.8"
    }
}
